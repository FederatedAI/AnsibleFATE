def db_commit(sql):
  conn=None

  #print('-------0----------') 
  conn= pymysql.connect(host=db_host,port=db_port,user=user,password=passwd,database=db, charset="utf8")
  #print('-------2----------') 

  cur = conn.cursor()
  try:
    cur.execute(sql)
    conn.commit()
  except pymysql.Error as e:
    print('mysql.Error: ',e.args[0],e.args[1])  
    conn.rollback()
  conn.close()

