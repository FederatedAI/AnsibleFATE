#!/bin/bash

source {{pbase}}/{{pname}}/fate_flow/bin/init_env.sh

mv {{pbase}}/{{pname}}/fate/fate_client {{pbase}}/{{pname}}
cd {{pbase}}/{{pname}}/fate_client/python
python setup.py install

mv {{pbase}}/{{pname}}/fate/fate_test {{pbase}}/{{pname}}
cd {{pbase}}/{{pname}}/fate_test/python
python setup.py install

cd {{pbase}}/{{pname}}

flow init --ip '{{ansible_ssh_host}}' --port '{{fate_flow.get("httpPort", 9380)}}'
